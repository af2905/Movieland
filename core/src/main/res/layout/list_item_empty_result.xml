<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.github.af2905.movieland.core.common.model.item.EmptyResultItem" />

    </data>

    <LinearLayout
        android:id="@+id/empty_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            style="@style/DefaultInfoIconsStyleNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin"
            android:src="@drawable/ic_search"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/TextAlphaStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:gravity="center_horizontal"
            android:text="@string/search_empty_result"
            tools:textColor="@color/darkGrey" />
    </LinearLayout>
</layout>