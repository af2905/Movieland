<?xml version="1.0" encoding="utf-8"?>
<resources>

    //TextView
    <style name="TextView">
        <item name="android:textSize">@dimen/default_text_normal</item>
    </style>

    <style name="TextView.LineSpacingMultiplier">
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing_multiplier</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">@dimen/default_text_small</item>
    </style>

    <style name="TextView.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/default_text_medium</item>
    </style>

    <style name="TextView.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    //TextAppearance
    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

</resources>

