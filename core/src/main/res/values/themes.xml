<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movieland" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchStyle">
        <item name="android:background">@null</item>
        <item name="android:maxLines">@integer/max_lines_1</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textColorHint">@color/tintSearchBarDark</item>
        <item name="android:hint">@string/hint_search_query</item>
        <item name="android:textSize">@dimen/default_text_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchBackgroundStyle">
        <item name="android:background">@drawable/bg_search_variant</item>
    </style>

    <style name="SearchIconsStyle">
        <item name="android:tint">@color/tintSearchBarDark</item>
    </style>

    <style name="DefaultInfoIconsStyleNotFound">
        <item name="android:background">@drawable/bg_search_night</item>
        <item name="android:tint">@color/tintSearchBarDark</item>
    </style>

    <style name="DividerBackground">
        <item name="android:backgroundTint">@color/dividerDark</item>
    </style>

    <style name="TabsUnderlineBackground">
        <item name="android:background">@drawable/bg_tab_underline_dark</item>
    </style>

    <style name="TabsLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/default_tab_indicator_height</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="ColorSurfaceBackground">
        <item name="android:background">@drawable/bg_color_surface</item>
    </style>

    <style name="ShimmerStyle">
        <item name="android:background">@drawable/bg_dark_grey</item>
    </style>

    <style name="ShimmerStyleRoundCorners">
        <item name="android:background">@drawable/bg_dark_grey_corner_8</item>
    </style>

    <style name="ShimmerStyleRoundCornersBig">
        <item name="android:background">@drawable/bg_dark_grey_corner_32</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:tint">@color/darkGrey</item>
    </style>

</resources>