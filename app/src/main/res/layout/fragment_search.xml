<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.github.af2905.movieland.presentation.feature.search.SearchViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/list_item_search"
            app:item="@{viewModel.searchItem}"
            app:listener="@{viewModel.searchListener}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchRecyclerView"
                linearLayoutManager="@{false}"
                recyclerSetData="@{viewModel.items}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>

</layout>