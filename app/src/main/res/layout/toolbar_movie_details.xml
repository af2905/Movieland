<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurface"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/collapsing_toolbar_min_height"
            app:collapsedTitleTextAppearance="@style/AppTheme.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/AppTheme.Title.Expanded"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed"
            app:titleEnabled="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?colorSurface">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/backdrop_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/backdrop_height"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:background="@color/white" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/heart_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/default_margin"
                        android:button="@drawable/ic_heart_selector"
                        app:useMaterialThemeColors="false" />
                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:elevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/movieTitle"
                            style="@style/TextView.Medium.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/default_margin"
                            android:gravity="start|center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Звездные войны" />

                    <!--    <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/movieRatingStar"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:isIndicator="true"
                            android:minWidth="@dimen/default_margin"
                            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/default_margin"
                            android:numStars="5"
                            android:progressBackgroundTint="@color/gold"
                            android:stepSize="0.5"
                            tools:rating="3.2" />

                        <TextView
                            android:id="@+id/movieRatingNumber"
                            style="@style/TextView.Bold.White"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@{item.voteAverageBackground}"
                            android:paddingStart="@dimen/default_margin_tiny"
                            android:paddingEnd="@dimen/default_margin_tiny"
                            android:layout_marginStart="@dimen/default_margin"
                            android:text="@{String.valueOf(item.voteAverage)}"
                            app:layout_constraintStart_toEndOf="@id/movieRatingStar"
                            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
                            tools:background="@drawable/bg_green_corners_8"
                            tools:text="7.6" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:layout_marginRight="@dimen/default_margin"
                            android:orientation="horizontal">





                            <ImageView
                                android:id="@+id/full_hd_image_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:layout_weight="5"
                                android:src="@drawable/ic_4k_fullhd" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
</merge>