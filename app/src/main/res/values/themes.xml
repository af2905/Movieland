<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movieland" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold_200</item>
        <item name="colorSecondaryVariant">@color/gold_700</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Movieland.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Movieland.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchStyle">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:maxLines">@integer/max_lines_1</item>
        <item name="android:paddingStart">@dimen/default_margin_big</item>
        <item name="android:paddingEnd">@dimen/default_margin_huge</item>
        <item name="android:textColorHint">@color/tintSearchBarLight</item>
        <item name="android:hint">@string/hint_search_query</item>
        <item name="android:textSize">@dimen/default_text_normal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SearchIconsStyle">
        <item name="android:tint">@color/tintSearchBarLight</item>
    </style>

    <style name="DividerBackground">
        <item name="android:backgroundTint">@color/dividerLight</item>
    </style>

</resources>