<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_graph"
    app:startDestination="@id/profileFragment">

    <include app:graph="@navigation/movie_detail_graph" />
    <include app:graph="@navigation/person_detail_graph" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.github.af2905.movieland.profile.presentation.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/openOptionLiked"
            app:destination="@id/optionLikedFragment" />
    </fragment>

    <fragment
        android:id="@+id/optionLikedFragment"
        android:name="com.github.af2905.movieland.profile.presentation.optionLiked.OptionLikedFragment"
        android:label="OptionLikedFragment"
        tools:layout="@layout/fragment_option_liked">

        <action
            android:id="@+id/openMovieDetail"
            app:destination="@id/movie_detail_graph" />

        <action
            android:id="@+id/openPersonDetail"
            app:destination="@id/person_detail_graph" />

    </fragment>
</navigation>
